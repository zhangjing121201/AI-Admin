{
  // 保留原有设置
  "i18n-ally.localesPaths": ["src/locales", "src/locales/lang"],
  // 启用保存时格式化
  "editor.formatOnSave": true,
  // 设置 Prettier 为默认格式化器
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // 让 Prettier 作用于所有支持的文件类型
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
